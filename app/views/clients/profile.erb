<div class="container">
    <div class="row center top-spaced-bar">
       <div class="row center">
        <h2>Hello, <%=current_user.name%>!</h2>
        <a class="btn-small" href="/clients/<%=current_user.id%>/edit">Edit My Info</a>
       </div>
 
       <%if current_user.appointments.empty?%>
            <div class="row center">
                <p class="flow-text">You don't currently have any appointments!</p>
                <p class="flow-text"><a href="/providers">Search for a Provider</a> to set up your next appointment.</p>
            </div>
       <%else%>
            <div class="row center">
                    <h3>Your upcoming appointments:<h3>
            </div>
    </div>

    <div class="row center">
       <%current_user.appointments.each do |appointment|%>
       
            <div class="col s12 m6 l6">
                <div class="card grey white appointment-card">
                    <header class="container appointment-card-name">
                        <span class="card-title"><%=appointment.provider.business_name%></span>
                        <p>Date: <%=appointment.date.strftime("%A %D")%></p>
                        <p>Time: <%=appointment.date.strftime("%r")%></p>
                    </header>
                    <p><u>Services:</u></p>
                    <%appointment.services.each do |service|%>
                    <p><%=service.name.capitalize%> : $<%='%.2f' % service.price.to_f%></p>
                    <%end%>
                    <h5>Total: $<%='%.2f' % appointment.total.to_f%></h5>
                      <div class="card-action">
                            <a class="btn card-btn" href="#">Edit Appointment</a>
                            <a class="btn card-btn" href="/providers/<%=appointment.provider.id%>">View Provider</a>
                      </div>
                </div>
            
            </div>
       <%end%>
       <%end%>
    </div>
        
</div>