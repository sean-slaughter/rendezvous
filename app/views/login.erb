<div class="container">
    <div class="row center top-spaced-bar">
       <div class="row center">
        <img src="/images/blue_logo.png" alt="">
    </div>
        <h1>Welcome Back</h1>
    </div>
    <div class="container">
        <form class="registration-form" action="/login" method="post">
            <div class="row">
                <div class="input-field">
                    <input type="email" name="email" id="email" class="validate">
                    <label for="email">Email</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field">
                    <input type="password" name="password" id="password" class="validate">
                    <label for="password">Password</label>
                </div>
            </div>
            <% if flash[:error] %>
            <div class="row center">
                <p class="red-text"><%=flash[:error]%></p>
                <% end %>
            </div>
             <div class="row center">
                <input class="btn-large" type="submit" value="Log In">
            </div>
        </form>
    </div>
    <div class="row center">
    <h5>Don't have an Account?</h5>
        <p><a href="/clients/signup">Sign Up as a Client</a></p>
        <p><a href="/providers/signup">Sign Up as a Provider</a></p>
    </div>
</div>


